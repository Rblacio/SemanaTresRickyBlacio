<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SemanaTresRickyBlacio.MainPage">

    <StackLayout>

        
            <Frame BackgroundColor="Tomato" Padding="30" CornerRadius="0">
            <Label Text="Tarea Desarrollo Semana III" HorizontalTextAlignment="Center" TextColor="White" FontSize="40"/>
        </Frame>
        
        
        <Entry x:Name="TxtUsuario" Placeholder="Ingrese Usuario"/>
        <Entry x:Name="TxtPass" Placeholder="Ingrese Contraseña" IsPassword="True"/>
        <Button x:Name="BtnLogin" Text="ACCEDER" Clicked="BtnLogin_Clicked"/>

        <Label Text="@BlacioCenter" HorizontalTextAlignment="Start" TextColor="Gold" FontSize="20"/>



    </StackLayout>

</ContentPage>
